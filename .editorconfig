# EditorConfig helps maintain consistent coding styles across editors
# Visit editorconfig.org for more information

# Top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# JavaScript, TypeScript, JSX, TSX
[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_size = 2
max_line_length = 100

# JSON
[*.json]
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# SQL
[*.sql]
indent_size = 2

# HTML
[*.html]
indent_size = 2

# CSS, SCSS
[*.{css,scss}]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# Makefile
[Makefile]
indent_style = tab

# Package files
[package.json]
indent_size = 2

# Environment files
[.env*]
indent_size = 2
